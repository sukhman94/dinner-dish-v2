<div class="pt-5 w-50 mx-auto">
<h1 class="mt-5">Categories</h1>
<%= link_to 'New Category', new_category_path,class: "btn btn-primary btn-sm w-25 float-right" %>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th colspan="2" class="text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td class="text-center"><%= link_to 'Edit', edit_category_path(category) %></td>
        <td class="text-center"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

</div>
